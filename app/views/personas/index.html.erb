<h1>Personas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th> Project </th>
      <th> Project </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.name %></td>
        <td><% persona.projects.each do |pr|%>
          <%= pr.name %>
          <%= link_to 'x' ,delete_persona_project_path(persona, pr), method: :delete, class: 'btn btn-danger '%>
          <% end %>
        </td>
          <td><%= form_with(model: persona.projects.build, url: personas_projects_path(persona), local:true) do |f|%>
                          <% if persona.errors.any? %>
                            <div id="error_explanation">
                                  <h2><%= pluralize(persona.errors.count, "error") %> prohibited this post from being saved:</h2>

                                  <ul>
                                        <% persona.errors.messages.each do |message| %>
                                    <li><%= message %></li>
                                        <% end %>
                                  </ul>
                            </div>
                          <% end %>

        <%= f.text_field :palabra%>
        <%= f.submit%>
        <% end %>
              </td>

        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

